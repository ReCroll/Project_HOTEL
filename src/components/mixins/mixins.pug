//- ========================== PRODUCTS CARD ===================

mixin createCard(number, discount, category, subCategory)
	.product__content-card.card(class=attributes.class, class=category, class =subCategory, get-attr = "_" + number)
		.card__hover 
			button.card__hover-button.button__more.popup-link(href = "#popup", get-attr = "_" + number) Add to cart 
			.card__hover-links 
				.share 
					img(src="@img//icons/share.svg", alt="share")
					p Share
				.like(class = "like_card-" + number)
					//- img(src="@img//icons/like.svg", alt="like")
					.heart
						span
						img(src="@img//icons/like.svg", alt="like")
					p Like
		.card__img
			.first__row
				.images__wrapper 
					.card__img-wrap.img__wrappers
						img.first__child(src=imgArray[number][0], alt=altImgArray[number], class= "_" + number, srcset="")
					.card__img-wrap.img__wrappers
						img(src=imgArray[number][1], alt=altImgArray[number], class= "_" + number, srcset="")
					//- .card__img-wrap
					//- 	img(src= imgArray[number][2], alt=altImgArray[number], class= "_" + number)
					if (typeof discount == 'number')
						.sales__wrapper
							p= '-' + discount + '%'
					else if (typeof discount == 'string')
						.news__wrapper 
							p= discount
			.second__row
				.images__wrapper 
					.card__img-wrap.img__wrappers
						img(src=imgArray[number][2], alt=altImgArray[number], class= "_" + number, srcset="")
			.third__row
				p.third__row-text=popupCardText[number][0]
				.third__row-composes
					span= popupCardText[number][1]
					p= popupCardText[number][2]
				.third__row-article
					span= popupCardText[number][3]
					p= popupCardText[number][4]
		.card__info-wrapper
			.card__info-wrapper-price-phone 
				.card__info.block__text 
					h5.block__text-title(class= "_" + number)= titleArray[number]
					p.block__text-text(class= "_" + number)= textArray[number]
					.block__text-price-wrapper
						if (typeof discount == 'number')
							p.price(class= "_" + number)= priceArray[number] - (priceArray[number] * discount / 100) + ' грн.'
							p.price.sale(class= "_" + number)= priceArray[number] + ' грн.'
						else
							p.price(class= "_" + number)= priceArray[number] + ' грн.'
				
			.close__btn.close-popup#close-popup


