mixin createServices(number, scrollClass)
	.services__content-rows(class="services__content-row-" + number, class=scrollClass)
		.hidden-row-wrapper
			.hidden__row._hidden(class=".hidden__row-" + number, id="hidden-row-" + number)
				.hidden__content-wrapper
					.hidden__text-button-wrapper
						.services__button.button__wrapper-transparent
							.rooms__info-button.button._big._transparent._hide-services-content._rotate(data-close="content-row" + number + "-close")
								+buttonBig()
						.hidden__content
							.hidden__content-number.services__sub-title=servicesNumber[number]
							h1.hidden__content-title.services__sub-title._mb=servicesTitleFirstHidden[number]
								<br>
								=servicesTitleSecondHidden[number]
							p.hidden__content-text.text.text-dark.text__max-width=servicesText[number]
				.hidden__images
					img(src=src=servicesBigImg[number], alt="img")
		.content__row-wrapper
			.content-row._show-services(class="content__row-" + number, id="content-row" + number + "-close")
				.content__images-wrapper
					img(src=servicesImg[number], alt="img", class="content__img")
				.services__title-wrapper
					.services__content-number.services__sub-title=servicesNumber[number]
					a(href="#")
						h1.services__content-title.services__sub-title=servicesTitleOllShow[number]
				.services__content-arrow
					span(class="_show-services hidden-row-" + number)
