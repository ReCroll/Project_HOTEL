//- ========================== HEADER ==========================

mixin createLists(number, scrollClass)
	if(menuList[number] && newPageLink[number])
		li.header__menu-link
			a(href=newPageLink[number])
				p.menu__link(data-goto=scrollClass)= menuList[number]
	else if(menuList[number] && newPageLink[number] === undefined)
		li.header__menu-link
			p.menu__link(data-goto=scrollClass)= menuList[number]
			


mixin menu()
	nav.menu__body-wrapper 
		ul.header__menu-list(class=attributes.class)
			+createLists('0', '._home')
			+createLists('1', '._about')
			+createLists('2', '._rooms')
			+createLists('3', '._restaurant')
			+createLists('4', '._conference')
			+createLists('5', '._contacts')

mixin socialList()
	li.social__link(class=socialClass[number])
		a.social__link-text(href=socialLink[number])
			p=socialName[number]
